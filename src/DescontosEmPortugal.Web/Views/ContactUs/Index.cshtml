@{
	ViewBag.Title = "ContactUs";
	Layout = "_Layout";
}

@model DescontosEmPortugal.Web.ViewModel.ContactViewModel

<form asp-action="Contact" method="post">
	<div class="container container-contact-form form-contact mt-3">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<label asp-for="@Model.FirstName">Primeiro Nome</label>
		<input asp-for="@Model.FirstName" type="text" id="fname" placeholder="O teu primeiro nome...">
		<span asp-validation-for="@Model.FirstName" class="text-danger d-block mb-1"></span>

		<label asp-for="@Model.LastName">Último Nome</label>
		<input asp-for="@Model.LastName" type="text" id="lname" placeholder="O teu último nome">
		<span asp-validation-for="@Model.LastName" class="text-danger d-block mb-1"></span>

		<label asp-for="@Model.Email">Email</label>
		<input asp-for="@Model.Email" type="text" id="lname" placeholder="Email...">
		<span asp-validation-for="@Model.Email" class="text-danger d-block mb-1"> </span>

		<label asp-for="@Model.Country">País</label>
		<select asp-for="@Model.Country" id="country" required>
			<option value="portugal">Portugal</option>
			<option value="espanha">Espanha</option>
			<option value="usa">USA</option>
		</select>
		<span asp-validation-for="@Model.Country" class="text-danger d-block mb-1"></span>

		<label asp-for="@Model.Message" name="subject">Texto</label>
		<textarea asp-for="@Model.Message" id="message" placeholder="Escreve a mensagem aqui.." style="height:200px" required></textarea>
		<span asp-validation-for="@Model.Message" class="text-danger"></span>

		<input class="btn-submit" type="submit" asp-action="Contact">
	</div>
</form>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}