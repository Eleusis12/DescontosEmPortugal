@model DescontosEmPortugal.Web.Models.Website

@{
	ViewData["Title"] = "Create";
}

<h1>Adiciona</h1>

<h4>Website</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="SiteUrl" class="control-label"></label>
				<input asp-for="SiteUrl" class="form-control" />
				<span asp-validation-for="SiteUrl" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Adicionar" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Voltar ao menu</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}